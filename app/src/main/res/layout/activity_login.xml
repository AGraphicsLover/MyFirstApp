<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/bgPurple">

  <com.example.myfirstapp.ArcView
    android:layout_width="match_parent"
    android:layout_height="330dp"
    app:arcHeight="100dp" />

  <ImageButton
    android:id="@+id/closeButton"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_margin="16dp"
    android:background="?attr/colorPrimary"
    android:contentDescription="关闭"
    android:scaleType="fitXY"
    android:src="@drawable/close" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginTop="40dp"
      android:scaleType="fitXY"
      android:src="@drawable/android" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="欢迎使用"
      android:textColor="@color/white"
      android:textSize="20sp" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="本APP由AGraphicsLover独立开发"
      android:textColor="@color/white"
      android:textSize="12sp" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
      android:gravity="center">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="去注册"
        android:textColor="@color/linkBlue"
        android:textSize="14sp" />

      <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/register" />

    </LinearLayout>

    <EditText
      android:id="@+id/activity_login_user_et"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:drawablePadding="8dp"
      android:drawableStart="@drawable/user"
      android:hint="账号" />

    <EditText
      android:id="@+id/activity_login_pwd_et"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:drawablePadding="8dp"
      android:drawableStart="@drawable/password"
      android:hint="密码"
      android:inputType="textPassword" />

    <Button
      android:id="@+id/activity_login_btn"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:text="登录" />

  </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>